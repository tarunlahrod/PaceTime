<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Complete one lap in"
        android:gravity="center"/>

    <TextView
        android:id="@+id/textview_time_output"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="_ _ : _ _"
        android:textSize="30sp"
        android:layout_weight="10"
        android:fontFamily="monospace"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Pace"
            android:textSize="24sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="100dp"
            android:paddingRight="100dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edittext_min"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:inputType="number"
                android:textSize="18sp"
                android:hint="min"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/edittext_sec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:inputType="number"
                android:textSize="18sp"
                android:hint="sec"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button_calculate_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate Time"
        android:textSize="18sp"
        android:textAllCaps="false"/>

    
</LinearLayout>